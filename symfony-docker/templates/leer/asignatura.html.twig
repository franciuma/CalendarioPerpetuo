{% extends 'base.html.twig' %}

{% block title %}{{accion}}
{% endblock %}

{% block body %}
	{{ parent() }}
	<!DOCTYPE html>
	<div class="container">
		<div class="row">
			<div class="col-md-6">
				<h1 class="font-weight-bold">Seleccionar asignatura</h1>
				{% if accion == "Eliminar asignatura" %}
					<div class="alert alert-info" role="alert">
					Esta acción eliminará la asignatura y podría afectar a los calendarios asociados.
					</div>
				{% endif %}
				<form action="{{ path(controlador) }}" method="POST">
						<select class="form-control" id="nombreAsig" name="idAsig">
							<option selected>-- Selecciona el nombre de la asignatura --</option>
							{% for asignatura in asignaturas %}
								<option value="{{asignatura.id}}">{{ asignatura.nombre }} - {{asignatura.titulacion.nombreTitulacion}}</option>
							{% endfor %}
						</select>
					<button type="submit" class="btn btn-primary">{{accion}}</button>
				</form>
			</div>
		</div>
	</div>

	<footer class="footer mt-auto py-3">
        <div class="container">
            <div class="text-left">
                <a href="{{ path('app_menu_profesor') }}" class="btn btn-primary">Volver al menú docente</a>
            </div>
        </div>
    </footer>
{% endblock %}
