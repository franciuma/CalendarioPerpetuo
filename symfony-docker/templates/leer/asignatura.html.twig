{% extends 'base.html.twig' %}

{% block title %}Seleccionar asignatura
{% endblock %}

{% block body %}
	{{ parent() }}
	<!DOCTYPE html>
	<div class="container">
		<div class="row">
			<div class="col-md-6">
				<h1 class="font-weight-bold">Seleccionar asignatura</h1>
				<form action="{{ path('app_seleccionar_editar_asignatura') }}" method="POST">
						<select class="form-control" id="nombreAsig" name="idAsig">
							<option selected>-- Selecciona el nombre de la asignatura --</option>
							{% for asignatura in asignaturas %}
								<option value="{{asignatura.id}}">{{ asignatura.nombre }} - {{asignatura.titulacion.nombreTitulacion}}</option>
							{% endfor %}
						</select>
					<button type="submit" class="btn btn-primary">Editar asignatura</button>
				</form>
			</div>
		</div>
	</div>

	<footer class="footer mt-auto py-3">
        <div class="container">
            <div class="text-left">
                <a href="{{ path('app_menu_administrador') }}" class="btn btn-primary">Volver al men√∫ administrador</a>
            </div>
        </div>
    </footer>
{% endblock %}
