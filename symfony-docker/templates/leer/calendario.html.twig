{% extends 'base.html.twig' %}

{% block title %}Formulario calendario
{% endblock %}

{% block body %}
	{{ parent() }}
	<!DOCTYPE html>
	<div class="container">
		<div class="row">
			<div class="col-md-6">
				<h1 class="font-weight-bold">Ver calendario</h1>
				<form>
					<div class="form-group">
                    <label for="nombreleerProfesor">Selecciona el docente</label>
                    <select class="form-control" id="nombreleerProfesor">
                        <option selected>-- Selecciona el nombre del docente --</option>
                        {% for profesor in profesores %}
                            <option>{{ profesor }}</option>
                        {% endfor %}
                    </select>
					</div>
					<button type="button" class="btn btn-primary ver-calendario">Ver calendario</button>
				</form>
			</div>
		</div>
	</div>
{% endblock %}
