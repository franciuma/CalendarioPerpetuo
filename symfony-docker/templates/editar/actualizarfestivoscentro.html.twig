{% extends 'base.html.twig' %}

{% block title %}Actualizar periodos de centro
{% endblock %}

{% block body %}
	{{ parent() }}
	<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
	<div class="container">
		<div class="row">
			<div class="col-md-6">
				<h1 class="font-weight-bold">Actualizar periodos de centro</h1>
				<form action="{{ path('app_actualizar_festivos_centro_admin') }}" method="POST">
					<div class="form-group">
						<label for="labelCurso">Curso académico al que trasladar los periodos</label>
                        <input type="text" class="form-control" id="cursoacademico" name="cursoacademico" placeholder="Ejemplo: 2023/2024">
                        <label for="nombreCentroFestivo">Escoge el centro: </label>
						<select class="form-control nombreCentroFestivo" id="nombreCentroFestivo" name="centro">
							<option selected>-- Selecciona el centro --</option>
							{% for centro in centros %}
								<option>{{ centro }}</option>
							{% endfor %}
						</select>
                    </div>
					<button type="submit" class="btn btn-primary actualizar-festivos">Actualizar periodos</button>
				</form>
			</div>
		</div>
	</div>

	<footer class="footer mt-auto py-3">
        <div class="container">
            <div class="text-left">
                <a href="{{ path('app_menu_administrador') }}" class="btn btn-primary">Volver al menú administrador</a>
            </div>
        </div>
    </footer>
{% endblock %}