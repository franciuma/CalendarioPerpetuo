{% extends 'base.html.twig' %}

{% block title %}Editar asignatura
{% endblock %}

{% block body %}
	{{ parent() }}
	<!DOCTYPE html>
	<div class="container">
		<div class="row">
			<div class="col-md-6">
				<h1 class="font-weight-bold">Edición de asignatura/s</h1>
				<form>
					<table id="asignaturasTable" class="table">
						<thead>
							<tr>
								<th>Nombre de asignatura</th>
								<th>Abreviatura</th>
								<th>Cuatrimestre</th>
								<th>Titulacion</th>
							</tr>
						</thead>
						<tbody></tbody>
					</table>
				</form>
			</div>
		</div>
	</div>

	<div class="container">
        <div class="row">
            <div class="col-md-6">
                <table id="leccionesTable" class="table">
                    <thead>
                        <tr>
                            <th>Título de sesión</th>
                            <th>Modalidad</th>
                            <th>Abreviatura (opcional)</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
		<button type="button" class="btn btn-primary editar-asignatura">Editar asignatura/s</button>
    </div>

	<div id="asignatura" data-asignatura="{{ asignatura }}" style="display: none;"></div>
	<div id="lecciones" data-lecciones="{{ lecciones }}" style="display: none;"></div>
	<div id="asignaturaid" data-asignaturaid="{{ asignaturaid }}"></div>
	<div id="titulaciones" data-titulaciones="{{ titulaciones }}" style="display: none;"></div>

	<footer class="footer mt-auto py-3">
        <div class="container">
            <div class="text-left">
                <a href="{{ path('app_menu_asignaturas_docente') }}" class="btn btn-primary">Volver al menú</a>
            </div>
        </div>
    </footer>
{% endblock %}