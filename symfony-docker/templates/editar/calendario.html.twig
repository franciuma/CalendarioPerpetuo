{% extends 'base.html.twig' %}

{% block title %}Formulario calendario
{% endblock %}

{% block body %}
	{{ parent() }}
	<!DOCTYPE html>
	<div class="container">
		<div class="row">
			<div class="col-md-6">
				<h1 class="font-weight-bold">Editar calendario</h1>
				<form>
					<div class="form-group">
                    <label for="nombreDelProfesorEditado">Docente</label>
                    <select class="form-control" id="nombreDelProfesorEditado">
                        <option selected>-- Selecciona el docente --</option>
                        {% for profesor in profesores %}
                            <option>{{ profesor }}</option>
                        {% endfor %}
                    </select>
					</div>
					<button type="button" class="btn btn-primary editar-calendario">Editar calendario</button>
				</form>
			</div>
		</div>
	</div>

	<footer class="footer mt-auto py-3">
        <div class="container">
            <div class="text-left">
                <a href="{{ path('app_menu_calendario_docente') }}" class="btn btn-primary">Volver al men√∫ docente</a>
            </div>
        </div>
    </footer>
{% endblock %}
