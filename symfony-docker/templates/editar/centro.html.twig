{% extends 'base.html.twig' %}

{% block title %}Edición de centro {{centro.nombre}}
{% endblock %}

{% block body %}
	{{ parent() }}
	<!DOCTYPE html>
	<div class="container">
		<div class="row">
			<div class="col-md-6">
				<h1 class="font-weight-bold">Edición de centro {{centro.nombre}}</h1>
				<form action="{{ path('app_editar_centro') }}" method="post">
					<div class="form-group">

					<label for="NombreCentro">Nombre del centro: </label>
					<input class="form-control" id="nombreCentro" name="nombreCentro" value="{{centro.nombre}}">

					<label for="nombreDeCentro">Nombre: </label>
					<select class="form-control provincia" id="provincia" name="provincia">
						<option selected>{{centro.provincia}}</option>
						{% for provincia in provincias %}
							<option>{{ provincia }}</option>
						{% endfor %}
					</select>
					</div>
					<button type="submit" class="btn btn-primary">Editar centro</button>
				</form>
			</div>
		</div>
	</div>

	<footer class="footer mt-auto py-3">
        <div class="container">
            <div class="text-left">
                <a href="{{ path('app_menu_administrador') }}" class="btn btn-primary">Volver al menú administrador</a>
            </div>
        </div>
    </footer>
{% endblock %}
