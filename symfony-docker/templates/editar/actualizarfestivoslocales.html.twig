{% extends 'base.html.twig' %}

{% block title %}Actualizar festivos
{% endblock %}

{% block body %}
	{{ parent() }}
	<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
	<div class="container">
		<div class="row">
			<div class="col-md-6">
				<h1 class="font-weight-bold">Actualizar festivos locales</h1>
				<form action="{{ path('app_actualizar_festivos_locales_admin') }}" method="POST">
					<div class="form-group">
						<label for="labelCurso">Curso académico al que trasladar los festivos</label>
                        <input type="text" class="form-control" id="cursoacademico" name="cursoacademico" placeholder="Ejemplo: 2023/2024">
                        <label for="labelCurso">Provincia</label>
                        <select class="form-control nombreFestivoLocal" id="nombreFestivoLocal" name="provincia">
							<option selected>-- Selecciona la localidad --</option>
							{% for provincia in provincias %}
								<option>{{ provincia }}</option>
							{% endfor %}
						</select>
                    </div>
					<button type="submit" class="btn btn-primary actualizar-festivos">Actualizar festivos</button>
				</form>
			</div>
		</div>
	</div>

	<footer class="footer mt-auto py-3">
        <div class="container">
            <div class="text-left">
                <a href="{{ path('app_menu_administrador') }}" class="btn btn-primary">Volver al menú administrador</a>
            </div>
        </div>
    </footer>
{% endblock %}