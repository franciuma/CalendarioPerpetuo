{% extends 'base.html.twig' %}

{% block title %}Menú principal alumno
{% endblock %}

{% block body %}
	{{ parent() }}
	<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
	<div class="container">
		<div class="row">
			<div class="col-md-6">
				<h1 class="font-weight-bold">Menú principal alumno</h1>
				<form>
					<div class="form-group">
                    <ul class="menu-list">
						<li><a href="{{ path('app_leer_calendario') }}">Ver calendario de un docente</a></li>
						<li><a href="{{ path('app_formulario_alumno') }}">Crear alumno</a></li>
                        <li><a href="{{ path('app_seleccionar_alumno') }}">Ver calendario</a></li>
					</ul>
                    </div>
				</form>
			</div>
		</div>
	</div>

	<script>
	{% if mensaje %}
	Swal.fire('¡Éxito!', '{{ mensaje }}', 'success');
	{% endif %}
    </script>

	<footer class="footer mt-auto py-3">
        <div class="container">
            <div class="text-left">
                <a href="{{ path('app_menu_principal') }}" class="btn btn-primary">Volver al menú principal</a>
            </div>
        </div>
    </footer>{% endblock %}