{% extends 'base.html.twig' %}

{% block title %}
    Periodos no lectivos locales
{% endblock %}

{% block body %}
    {{ parent() }}
    {% include 'navbarAdministrador.html.twig' %}
    {% include 'botonesCrud.html.twig' with {
        'nombre': 'localidad',
        'nombrePlural':'localidades',
        'pathCrear': path('app_crear_localidad_admin'),
        'pathVer': 'modal',
        'pathEditar': path('app_seleccionar_editar_localidad'),
        'pathEliminar': path('app_seleccionar_eliminar_localidad')
    } %}

    {% include 'modalListar.html.twig' with {
        'nombre': 'localidad',
        'nombrePlural': 'localidades',
        'lista': localidadLista
    } %}

    <script>
	{% if mensaje %}
		Swal.fire('{{ msjPrincipal }}', '{{ mensaje }}', '{{ estado }}');
	{% endif %}
    </script>
{% endblock %}
