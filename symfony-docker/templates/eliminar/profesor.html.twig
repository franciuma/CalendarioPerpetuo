{% extends 'base.html.twig' %}

{% block title %}Eliminar docente
{% endblock %}

{% block body %}
	{{ parent() }}
	<!DOCTYPE html>
	<div class="container">
		<div class="row">
			<div class="col-md-6">
				<h1 class="font-weight-bold">Eliminar docente</h1>
				<form action="{{ path('app_eliminar_profesor') }}" method="POST">
					<div class="alert alert-info" role="alert">
						Esta acción eliminará el docente y podría afectar a los calendarios asociados.
					</div>
					<select class="form-control" id="nombreDelProfesor" name="profesorSeleccionado">
						<option selected>-- Selecciona el nombre del docente --</option>
						{% for profesor in profesores %}
							<option>{{ profesor }}</option>
						{% endfor %}
					</select>
					<button type="submit" class="btn btn-primary eliminar-docente">Eliminar docente</button>
				</form>
			</div>
		</div>
	</div>

	<footer class="footer mt-auto py-3">
        <div class="container">
            <div class="text-left">
                <a href="{{ path('app_menu_docentes_admin') }}" class="btn btn-primary">Volver al menú</a>
            </div>
        </div>
    </footer>
{% endblock %}
