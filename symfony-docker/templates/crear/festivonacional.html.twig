{% extends 'base.html.twig' %}

{% block title %}Añadir festivos nacionales
{% endblock %}

{% block body %}
	{{ parent() }}
	<!DOCTYPE html>
	<div class="container">
		<div class="row">
			<div class="col-md-6">
				<h1 class="font-weight-bold">Añadir festivos nacionales</h1>
				<form>
					<div class="form-group">
						<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalFestivoNacional">
							Ver festivos de nación
						</button>
					</div>
					<div class="alert alert-info" role="alert">
						<b>Es posible que un festivo comience y acabe el mismo día</b>
					</div>
					<table id="festivosNacionalesTable" class="table">
						<thead>
							<tr>
								<th>Nombre</th>
								<th>Inicio</th>
								<th>Final</th>
								<th>Eliminar</th>
							</tr>
						</thead>
						<tbody></tbody>
					</table>
				<button type="button" class="btn btn-primary aniadir-festivos-nacional" >Añadir festivo nacionales</button>
				<button type="button" class="btn btn-primary guardar-festivos-nacional">Guardar festivos nacionales</button>
				</form>
			</div>
		</div>
	</div>

	<!-- Modal -->
	<div class="modal fade" id="modalFestivoNacional" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
		<div class="modal-header">
			<h5 class="modal-title" id="exampleModalLabel">Festivos nacionales</h5>
			<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
		</div>
		<div class="modal-body">
			<ul>
			{% for festivoNacional in festivosNacionales %}
				<li>{{ festivoNacional }}</li>
			{% endfor %}
			</ul>
		</div>
		<div class="modal-footer">
			<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
		</div>
		</div>
	</div>
	</div>

	<footer class="footer mt-auto py-3">
        <div class="container">
            <div class="text-left">
                <a href="{{ path('app_menu_administrador') }}" class="btn btn-primary">Volver al menú administrador</a>
            </div>
        </div>
    </footer>
{% endblock %}
