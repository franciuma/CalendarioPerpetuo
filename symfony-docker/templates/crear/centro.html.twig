{% extends 'base.html.twig' %}

{% block title %}Crear centro
{% endblock %}

{% block body %}
	{{ parent() }}
	<!DOCTYPE html>
	<div class="container">
		<div class="row">
			<div class="col-md-6">
				<h1 class="font-weight-bold">Creación de centro</h1>
				<form action="{{ path('app_crear_centro_admin_procesar') }}" method="post">
					<div class="form-group">
						<label for="nombreDeCentro">Nombre del centro: </label>
                        <input type="text" class="form-control" name="nombreDelCentro">

						<label for="nombreDeProvincia">Nombre de la localidad: </label>
						<select class="form-control" id="nombreDeProvincia" name="nombreDeProvincia">
							<option selected>-- Selecciona el nombre de la localidad --</option>
							{% for provincia in provincias %}
								<option>{{ provincia }}</option>
							{% endfor %}
						</select>
					</div>
					<button type="submit" class="btn btn-primary crear-centro">Crear centro</button>
				</form>
			</div>
		</div>
	</div>

	<footer class="footer mt-auto py-3">
        <div class="container">
            <div class="text-left">
                <a href="{{ path('app_menu_administrador') }}" class="btn btn-primary">Volver al menú administrador</a>
            </div>
        </div>
    </footer>
{% endblock %}
