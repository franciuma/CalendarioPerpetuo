{% extends 'base.html.twig' %}

{% block title %}Formulario calendario
{% endblock %}

{% block body %}
	{{ parent() }}
	<!DOCTYPE html>
	<div class="container">
		<div class="row">
			<div class="col-md-6">
				<h1 class="font-weight-bold">Creaci√≥n de calendario</h1>
				<form>
					<div class="form-group">
						<label for="nombreDeProvincia">Provincia</label>
						<select class="form-control" id="nombreDeProvincia">
							<option selected>-- Selecciona el nombre de la provincia --</option>
							{% for provincia in provincias %}
								<option>{{ provincia }}</option>
							{% endfor %}
						</select>

						<label for="nombreDelCentro">Nombre del centro</label>
						<select class="form-control" id="nombreDelCentro">
							<option selected>-- Selecciona el nombre del centro --</option>
							{% for nombreCentro in nombreCentros %}
								<option>{{ nombreCentro }}</option>
							{% endfor %}
						</select>

						<label for="nombreDelProfesor">Selecciona el docente</label>
						<select class="form-control" id="nombreDelProfesor">
							<option selected>-- Selecciona el nombre del docente --</option>
							{% for profesor in profesores %}
								<option>{{ profesor }}</option>
							{% endfor %}
						</select>
					</div>
					<button type="button" class="btn btn-primary previsualizar-calendario">Previsualizar calendario</button>
				</form>
			</div>
		</div>
	</div>
{% endblock %}
