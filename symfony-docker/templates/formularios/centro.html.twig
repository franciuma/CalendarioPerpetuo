{% extends 'base.html.twig' %}

{% block title %}Formulario calendario
{% endblock %}

{% block body %}
	{{ parent() }}
	<!DOCTYPE html>
	<div class="container">
		<div class="row">
			<div class="col-md-6">
				<h1 class="font-weight-bold">Creación de calendario</h1>
				<form>
					<div class="form-group">
						<label for="nombreDelCentroProvincia">Selecciona el centro y localidad: </label>
						<select class="form-control" id="nombreDelCentroProvincia">
							<option selected>-- Selecciona el nombre del centro y localidad --</option>
							{% for nombreCentroProvincia in nombreCentrosProvincias %}
								<option>{{ nombreCentroProvincia }}</option>
							{% endfor %}
						</select>

						<label for="nombreDelProfesor">Selecciona el docente</label>
						<select class="form-control" id="nombreDelProfesor">
							<option selected>-- Selecciona el nombre del docente --</option>
							{% for profesor in profesores %}
								<option>{{ profesor }}</option>
							{% endfor %}
						</select>
					</div>
					<button type="button" class="btn btn-primary previsualizar-calendario">Previsualizar calendario</button>
				</form>
			</div>
		</div>
	</div>

	<footer class="footer mt-auto py-3">
        <div class="container">
            <div class="text-left">
                <a href="{{ path('app_menu_calendario_docente') }}" class="btn btn-primary">Volver al menú docente</a>
            </div>
        </div>
    </footer>
{% endblock %}
