{% extends 'base.html.twig' %}

{% block title %}Formulario calendario
{% endblock %}

{% block body %}
	{{ parent() }}
	<!DOCTYPE html>
	<div class="container">
		<div class="row">
			<div class="col-md-6">
				<h1 class="font-weight-bold">Creación de centro</h1>
				<form>
					<div class="form-group">
						<label for="nombreDelCentro">Nombre del centro</label>
						<input type="text" class="form-control" id="nombreDelCentro" placeholder="ETSII Informatica">
						<label for="nombreDeProvincia">Provincia</label>
						<input type="text" class="form-control" id="nombreDeProvincia" placeholder="Málaga">
						<label for="profesorDatepicker">Indique el dia en el que comenzarán las clases:</label>
						<input type="text" class="form-control datepickerInicio" id="datepickerInicio" placeholder="Selecciona una fecha">
					</div>
					<button type="button" class="btn btn-primary previsualizar-calendario">Previsualizar calendario</button>
				</form>
			</div>
		</div>
	</div>
{% endblock %}
