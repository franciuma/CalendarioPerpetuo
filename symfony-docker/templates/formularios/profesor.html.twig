{% extends 'base.html.twig' %}

{% block title %}Formulario docente
{% endblock %}

{% block body %}
	{{ parent() }}
	<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
	<div class="container">
		<div class="row">
			<div class="col-md-6">
				<h1 class="font-weight-bold">Creación de docente</h1>
				<form>
					<div class="form-group">
						<label for="labelnombreGrupos">Compruebe que su asignatura se encuentra en la lista: </label>
						<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
							Lista de asignaturas
						</button>
						<br></br>
						<label for="labelnombreProf">Nombre</label>
                        <input type="text" class="form-control" id="nombreProf">

                        <label for="labelpapellidoProf">Primer apellido</label>
                        <input type="text" class="form-control" id="papellidoProf">

                        <label for="labelsapellidoProf">Segundo apellido</label>
                        <input type="text" class="form-control" id="sapellidoProf">

						<label for="labeldespacho">Despacho</label>
						<input type="text" class="form-control" id="despacho" placeholder="aula de despacho">

                        <label for="labelCorreo">Correo</label>
						<input type="text" class="form-control" id="correo">

					</div>
					<label for="labelnombreGrupos">Rellene los grupos a los que da clase:</label>
					<table id="gruposTable" class="table">
						<thead>
							<tr>
								<th>Grupo</th>
								<th>Asignatura</th>
								<th>Horario</th>
								<th>Dias teoria</th>
								<th>Dias practica</th>
								<th>Eliminar</th>
							</tr>
						</thead>
						<tbody></tbody>
					</table>
                    <button type="button" class="btn btn-primary aniadir-fila-prof">Añadir grupo</button>
					<button type="button" class="btn btn-primary crear-profesor">Crear docente</button>
				</form>
			</div>
		</div>
	</div>
	<div id="asignaturas" data-asignaturas="{{ asignaturas|json_encode|url_encode }}" style="display: none;"></div>
	
	<!-- Modal -->
	<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
		<div class="modal-header">
			<h5 class="modal-title" id="exampleModalLabel">Lista de asignaturas</h5>
			<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
		</div>
		<div class="modal-body">
			<ul>
			{% for asignatura in asignaturas %}
				<li>{{ asignatura }}</li>
			{% endfor %}
    		</ul>
		</div>
		<div class="modal-footer">
			<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
		</div>
		</div>
	</div>
	</div>

	<footer class="footer mt-auto py-3">
        <div class="container">
            <div class="text-left">
                <a href="{{ path('app_menu_administrador') }}" class="btn btn-primary">Volver al menú administrador</a>
            </div>
        </div>
    </footer>
{% endblock %}