{% extends 'base.html.twig' %}

{% block title %}Formulario asignatura
{% endblock %}

{% block body %}
	{{ parent() }}
	<!DOCTYPE html>
	<div class="container">
		<div class="row">
			<div class="col-md-6">
				<h1 class="font-weight-bold">Creación de asignatura/s</h1>
				<form>
					<table id="asignaturasTable" class="table">
						<thead>
							<tr>
								<th>Nombre de asignatura</th>
								<th>Abreviatura</th>
								<th>Sesiones teóricas</th>
								<th>Sesiones prácticas</th>
								<th>Cuatrimestre</th>
								<th>Titulacion</th>
								<th>Añadir sesiones</th>
								<th>Eliminar</th>
							</tr>
						</thead>
						<tbody></tbody>
					</table>
                    <button type="button" class="btn btn-primary aniadir-fila-asig">Añadir asignatura</button>
					<button type="button" class="btn btn-primary crear-asignatura">Crear asignatura/s</button>
				</form>
			</div>
		</div>
	</div>

	<div id="titulaciones" data-titulaciones="{{ titulaciones }}" style="display: none;"></div>

	<footer class="footer mt-auto py-3">
        <div class="container">
            <div class="text-left">
                <a href="{{ path('app_menu_asignaturas_docente') }}" class="btn btn-primary">Volver al menú</a>
            </div>
        </div>
    </footer>
{% endblock %}