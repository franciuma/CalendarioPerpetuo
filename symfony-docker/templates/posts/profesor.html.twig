{% extends 'base.html.twig' %}

{% block title %}Docente {{accion}} {% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h1 class="font-weight-bold">¡Docente {{accion}} con exito! ✅</h1>
            <ul class="menu-list">
                <li><a href="{{ path('app_formulario_profesor') }}">Crear más docentes</a></li>
                {% if accion == 'editado' %}
                    <li><a href="{{ path('app_menu_profesor') }}">Volver al menú</a></li>
                {% else %}
                    <li><a href="{{ path('app_menu_administrador') }}">Volver al menú</a></li>
                {% endif %}
            </ul>
        </div>
    </div>
</div>
{% endblock %}