{% extends 'base.html.twig' %}

{% block title %}
    Lista de titulaciones
{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1 class="font-weight-bold">Lista de titulaciones</h1>
                <ul>
                    {% if titulaciones is empty %}
                        <li>No hay titulaciones registradas</li>
                    {% else %}
                        {% for titulacion in titulaciones %}
                            <li>{{ titulacion }}</li>
                        {% endfor %}
                    {% endif %}
                </ul>
            </div>
        </div>
    </div>

    <footer class="footer mt-auto py-3">
        <div class="container">
            <div class="text-left">
                <a href="{{ path('app_menu_profesor') }}" class="btn btn-primary">Volver al men√∫ docente</a>
            </div>
        </div>
    </footer>
{% endblock %}
