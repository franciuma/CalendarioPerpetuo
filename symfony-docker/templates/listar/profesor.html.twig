{% extends 'base.html.twig' %}

{% block title %}
    Lista de docentes
{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1 class="font-weight-bold">Lista de docentes</h1>
                <ul>
                    {% if profesores is empty %}
                        <li>No hay docentes registrados</li>
                    {% else %}
                        {% for profesor in profesores %}
                            <li>{{ profesor }}</li>
                        {% endfor %}
                    {% endif %}
                </ul>
            </div>
        </div>
    </div>

    <footer class="footer mt-auto py-3">
        <div class="container">
            <div class="text-left">
                <a href="{{ path('app_menu_docentes_admin') }}" class="btn btn-primary">Volver al men√∫</a>
            </div>
        </div>
    </footer>
{% endblock %}
